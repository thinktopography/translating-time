<% flash = flash()%>
<% unless flash[:success].blank? %>
  <div class="flash success">
    <%= raw(flash[:success]) %>
    <span>x</span>
  </div>
<% end %>
<% unless flash[:warning].blank? %>
  <div class="flash warning">
    <%= raw(flash[:warning]) %>
    <span>x</span>
  </div>
<% end %>
<% unless flash[:error].blank? %>
  <div class="flash error">
    <%= raw(flash[:error]) %>
    <span>x</span>
  </div>
<% end %>
