<% content_for :breadcrumbs do %>
  <%= link_to 'Admin', admin_dashboard_path %> &raquo
  <%= link_to 'Items', admin_items_path %> &raquo
  <strong>Edit Menu Item</strong>
<% end %>

<% content_for :main do %>

  <div class="form">
    
    <div class="form-header">
      <h2>Menu Item Details</h2>
    </div>
  
    <%= form_for @item, { :url => admin_item_path(@item) } do |f| %>
    
      <div class="form-body">
  
        <dl>
        
          <%= render 'form', :f => f %>
          
        </dl>
        
      </div>
    
      <div class="form-footer">
    
        <ul>
          <li><%= link_to 'Cancel', admin_items_path %></li>
          <li><%= f.submit "Save", { :class => "button" } %></li>
        </ul>
        
      </div>
    
    <% end %>
  
  </div>

<% end %>