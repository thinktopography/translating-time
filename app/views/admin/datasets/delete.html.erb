<% content_for :breadcrumbs do -%>
  <%= link_to 'Dashboard', admin_dashboard_path %> &raquo;
  <%= link_to 'Datasets', admin_datasets_path %> &raquo;
  <strong>Delete Dataset</strong>
<% end -%>

<% content_for :main do %>
  <%= form_tag(admin_dataset_path(@dataset), :method => :delete) do %>
    <div class="form" id="new_dataset">
      <div class="form-header">
        <h2>Delete Dataset</h2>
      </div>
      <div class="form-body">
        <p>Are you sure you want to delete this dataset?</p>
      </div>
      <div class="form-footer">
        <ul>
          <li><%= submit_tag 'Continue', :class => 'button' %></li>
        </ul>
      </div>
  <% end -%>
<% end -%>