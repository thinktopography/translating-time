<% content_for :breadcrumbs do -%>
  <%= link_to 'Dashboard', admin_dashboard_path %> &raquo;
  <%= link_to 'Datasets', admin_datasets_path %> &raquo;
  <strong>Edit Dataset</strong>
<% end -%>

<% content_for :main do %>
  <%= form_for @dataset, { :url => admin_dataset_path(@dataset) } do |f| -%>
    <div class="form" id="new_species">
      <div class="form-header">
        <h2>Dataset Details</h2>
      </div>
      <div class="form-body">
        <dl>
          <%= f.text_area_control @dataset, :description %>
        </dl>
      </div>
      <div class="form-footer">
        <ul>
          <li><%= link_to 'Cancel', admin_datasets_path, :class => 'cancel' %></li>
          <li><%= f.submit 'Save', :class => 'button' %></li>
        </ul>
      </div>
    </div>
  <% end -%>
<% end -%>