<%= f.text_field_control @species, :name, { :required => true } %>

<%= f.text_field_control @species, :code %>

<%= f.text_field_control @species, :constant, {}, { :maxlength => 8 } %>

<%= f.text_field_control @species, :slope, {}, { :maxlength => 8 } %>

<dt><%= f.label :in_model, "In Model?" %></dt>
<dd><%= f.check_box :in_model %></dd>

</dl>

<% if Taxonomy.roots.count > 0 %>

  <h2>Classifications</h2>
  
  <dl>
    <% Taxonomy.roots.each do |taxonomy| %>
      <dt><label><%= taxonomy.name %></label></dt>
      <dd><%= select_tag "species[taxonomy_ids][]", options_from_collection_for_select(taxonomy.children.order("name ASC"), :id, :name, @species.taxonomy_ids), :include_blank => true %></dd>
    <% end %>
  </dl>

<% end %>