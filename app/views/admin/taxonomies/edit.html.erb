<% content_for :breadcrumbs do -%>
  <%= link_to 'Dashboard', admin_dashboard_path %> &raquo;
  <%= link_to 'Taxonomies', admin_taxonomies_path %> &raquo;
  <strong>Edit Taxonomy</strong>
<% end -%>

<% content_for :main do %>
  <%= form_for @taxonomy, { :url => admin_taxonomy_path(@taxonomy) } do |f| -%>
    <div class="form" id="new_taxonomy">
      <div class="form-header">
        <h2>Taxonomy Details</h2>
      </div>
      <div class="form-body">
        <dl>
          <%= render 'form', :f => f %>
        </dl>
      </div>
      <div class="form-footer">
        <ul>
          <li><%= link_to 'Cancel', admin_taxonomies_path, :class => 'cancel' %></li>
          <li><%= f.submit 'Save', :class => 'button' %></li>
        </ul>
      </div>
    </div>
  <% end -%>
<% end -%>