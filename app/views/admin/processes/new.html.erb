<% content_for :breadcrumbs do -%>
  <%= link_to 'Dashboard', admin_dashboard_path %> &raquo;
  <%= link_to 'Processes', admin_processes_path %> &raquo;
  <strong>New process</strong>
<% end -%>

<% content_for :main do %>
  <%= form_for @process, { :url => admin_processes_path } do |f| -%>
    <div class="form" id="new_process">
      <div class="form-header">
        <h2>Process Details</h2>
      </div>
      <div class="form-body">
        <dl>
          <%= render 'form', :f => f %>
        </dl>
      </div>
      <div class="form-footer">
        <ul>
          <li><%= link_to 'Cancel', admin_processes_path, :class => 'cancel' %></li>
          <li><%= f.submit 'Save and Finish', :class => 'button' %></li>
          <li><%= f.submit 'Save and Continue', :class => 'button' %></li>
        </ul>
      </div>
    </div>
  <% end -%>
<% end -%>