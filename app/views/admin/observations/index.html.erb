<% content_for :breadcrumbs do -%>
  <%= link_to 'Dashboard', admin_dashboard_path %> &raquo;
  <strong>Observations</strong>
<% end -%>

<% content_for :main do %>
  <div class="grid" id="locations">
    <div class="grid-header">
      <h2>Observations</h2>
      <ul>
        <li><%= link_to "+ Add New", new_admin_observation_path %></li>
      </ul>
    </div>
    <div class="grid-body">
      <table>
        <thead>
          <tr>
            <th width="45%">Species</th>
            <th width="45%">Event</th>
            <th width="10%">Value</th>
          </tr>
        </thead>
        <tbody>
          <% unless @observations.empty? %>
            <% @observations.each do |observation| %>
              <tr class="<%= cycle('odd', 'even') %>">
                <td><%= observation.species.name %></td>
                <td><%= observation.event.name %></td>
                <td><%= link_to observation.value, edit_admin_observation_path(observation) %></td>
              </tr>
            <% end -%>
          <% else -%>
            <tr>
              <td colspan="3">There are no observations</td>
            </tr>
          <% end -%>
        </tbody>
      </table>
    </div>
    <div class="grid-footer">
    </div>
  </div>
<% end -%>