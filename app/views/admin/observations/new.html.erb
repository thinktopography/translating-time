<% content_for :breadcrumbs do -%>
  <%= link_to 'Dashboard', admin_dashboard_path %> &raquo;
  <%= link_to 'Observations', admin_observations_path %> &raquo;
  <strong>New Observation</strong>
<% end -%>

<% content_for :main do %>
  <%= form_for @observation, { :url => admin_observations_path } do |f| -%>
    <div class="form" id="new_observation">
      <div class="form-header">
        <h2>Observation Details</h2>
      </div>
      <div class="form-body">
        <dl>
          <%= render 'form', :f => f %>
        </dl>
      </div>
      <div class="form-footer">
        <ul>
          <li><%= link_to 'Cancel', admin_observations_path, :class => 'cancel' %></li>
          <li><%= f.submit 'Save and Finish', :class => 'button' %></li>
          <li><%= f.submit 'Save and Continue', :class => 'button' %></li>
        </ul>
      </div>
    </div>
  <% end -%>
<% end -%>