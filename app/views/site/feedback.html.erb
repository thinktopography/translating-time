<% content_for :content do %>

  <%= form_for @inquiry, { :url => feedback_path } do |f| -%>

    <div class="form">
      <div class="form-header">
        <h2>Feedback</h2>
      </div>
      <div class="form-body">
        <dl>
          <%= f.text_field_control @inquiry, :name %>
          <%= f.text_field_control @inquiry, :affiliation %>
          <%= f.text_field_control @inquiry, :email %>
          <%= f.text_area_control @inquiry, :comments, {}, { :rows => 5 } %>
        </dl>
      </div>
      <div class="form-footer">
        <%= f.submit 'Send Feedback', :class => 'button' %>
      </div>
    </div>
    
  <% end %>

<% end %>
